<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:weightSum="1">

        <TextView
            android:text="Species:"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="45sp"
            android:gravity="right|center_vertical"
            android:layout_weight="0.4"
            android:id="@+id/speciesView" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:id="@+id/speciesSpinner2"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:weightSum="1">

        <TextView
            android:text="DBH:"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="45sp"
            android:gravity="right|center_vertical"
            android:layout_weight="0.4"
            android:id="@+id/dbhView"/>

        <EditText
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:inputType="number"
            android:textSize="45sp"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/dbhEdit" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:weightSum="1">

        <TextView
            android:text="Storage Factor:"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="45sp"
            android:gravity="right|center_vertical"
            android:layout_weight="0.4"
            android:id="@+id/factorView" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:id="@+id/factorSpinner"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:weightSum="1">

        <TextView
            android:text="(U)ASPM:"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="45sp"
            android:gravity="right|center_vertical"
            android:layout_weight="0.4"
            android:id="@+id/aspmView" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:id="@+id/aspmSpinner"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:weightSum="1">

        <Button
            android:text="Delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textSize="40sp"
            android:gravity="center"
            android:onClick="sendMessage"
            android:id="@+id/deleteButton" />

        <Button
            android:text="Done"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textSize="40sp"
            android:gravity="center"
            android:onClick="sendMessage2"
            android:id="@+id/doneButton" />
    </LinearLayout>
</LinearLayout>
